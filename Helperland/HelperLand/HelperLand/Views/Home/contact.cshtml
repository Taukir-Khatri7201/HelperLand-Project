@{
    ViewBag.Title = "Contact Us";
    ViewBag.SecondaryNav = true;
}

        <section class="common-banner contact-banner d-none d-md-block"></section>

        <!-- Contact Section -->
        <section class="common-wrapper">

            <div class="container">
                <div class="row">
                    <div class="col-md-10 offset-md-1">
                        <h2 class="common-star-header">Contact Us</h2>
                    </div>
                </div>
            </div>

            <!-- Contact Details -->
            <div class="container">
                <div class="row contact-info-wrapper">
                    <div class="col-md-4 text-center">
                        <div class="d-flex justify-content-center align-items-center contact-img-wrapper">
                            <img src="~/assets/location-icon.png" alt="Location">
                        </div>
                        <p>1111 Lorem ipsum text 100,</p>
                        <p>Lorem ipsum AB</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="d-flex justify-content-center align-items-center contact-img-wrapper">
                            <img src="~/assets/phone-call-icon.png" alt="Call">
                        </div>
                        <p><a href="tel:+49 (40) 123 56 7890" title="+49 (40) 123 56 7890">+49 (40) 123 56 7890</a></p>
                        <p><a href="tel:+49 (40) 987 56 0000" title="+49 (40) 987 56 0000">+49 (40) 987 56 0000</a></p>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="d-flex justify-content-center align-items-center contact-img-wrapper">
                            <img src="~/assets/message-icon.png" alt="Message">
                        </div>
                        <p><a href="mailto: info@helperland.com" title="info@helperland.com">info@helperland.com</a></p>
                    </div>
                </div>
            </div>

            <!-- Contact Us Form -->
            <div class="container container-top-outline">
                <h2 class="contact-form-header">Get in touch with us</h2>

                <div class="contact-form-container">
                    <form>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="text" class="form-control" id="firstname" placeholder="First name">
                            </div>
                            <div class="form-group col-md-6">
                                <input type="text" class="form-control" id="lastname" placeholder="Last name">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="number-pref">+49</span>
                                    </div>
                                    <input type="text" class="form-control" id="mobilenumber"
                                        placeholder="Mobile number" aria-describedby="number-pref" required>
                                    <div class="invalid-feedback">
                                        Please choose a username.
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <input type="email" class="form-control" id="email" placeholder="Email" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col">
                                <select id="subject" class="form-control">
                                    <option value="" disabled selected>Subject</option>
                                    <option>General</option>
                                    <option>Inquiry</option>
                                    <option>Renewal</option>
                                    <option>Revocation</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <textarea class="form-control" formcontrolname="message" maxlength="1000" rows="5"
                                    placeholder="Message"></textarea>
                            </div>
                        </div>

                        <div class="form-row justify-content-center">
                            <button type="submit" class="form-submit-btn">Submit</button>
                        </div>
                    </form>
                </div>
            </div>

        </section>

        <!-- Google Map Section -->
        <section class="common-wrapper map-section">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2525.317816682433!2d7.132833!3d50.732594!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47bee13f0afebfb1%3A0x7caeb94f4c1042fc!2sK%C3%B6nigswinterer%20Str.%20116%2C%2053227%20Bonn%2C%20Germany!5e0!3m2!1sen!2sus!4v1639648893776!5m2!1sen!2sus"
                width="100%" height="400px" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </section>

        <!-- News Letter Section -->
        <section class="news-letter bg-white">
            <div class="container text-center">
                <h2>GET OUR NEWSLETTER</h2>
                <div class="form-row d-flex justify-content-center align-items-center">
                    <div class="form-group">
                        <label for="email" style="display: none;">YOUR EMAIL</label>
                        <input type="text" placeholder="YOUR EMAIL" id="email" class="form-control">
                    </div>
                    <div class="btn-wrapper">
                        <button class="red-btn">Submit</button>
                    </div>
                </div>
            </div>
        </section>